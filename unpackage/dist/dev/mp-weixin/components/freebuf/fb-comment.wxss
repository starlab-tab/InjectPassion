.comment {
  margin: 15px 0;
}
.comment .comment-header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.comment .comment-header .logo {
  width: 30px;
  height: 30px;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  border-radius: 5px;
  overflow: hidden;
}
.comment .comment-header .logo image {
  width: 100%;
  height: 100%;
}
.comment .comment-header .date {
  font-size: 24rpx;
  padding-top: 10rpx;
  color: #c1c1c1;
}
.comment .comment-header .info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  font-size: 24rpx;
  color: #1da55b;
  line-height: 1.5;
}
.comment .comment-header .info .author {
  color: #333;
}
.comment .comment-header .info .is_author {
  display: inline-block;
  width: 60rpx;
  height: 28rpx;
  line-height: 1;
  margin-left: 20rpx;
  margin-top: 4rpx;
  text-align: center;
  font-family: PingFangSC-Regular,PingFang SC;
  color: #de4949;
  border-radius: 4rpx;
  border: 2rpx solid #de4949;
}
.comment .comment-header .info .level {
  margin-left: 20rpx;
  font-weight: 500;
  font-size: 26rpx;
}
.comment .comment-content {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #5b5b5b;
}
.comment .comment-content .comment-info {
  margin-top: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.comment .comment-content .comment-reply {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 30rpx 0;
  padding: 0 20rpx;
  border-top: 2rpx solid #eee;
  margin-left: 20rpx;
}

