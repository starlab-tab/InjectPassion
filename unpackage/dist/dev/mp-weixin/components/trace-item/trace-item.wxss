.trace-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 26rpx;
  padding: 16rpx 30rpx 16rpx 30rpx;
  width: 100%;
  background: #FFFFFF;
  border-radius: 10rpx;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.trace-item .top-info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  border-bottom: solid 2rpx #f5f5f5;
  padding-bottom: 20rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.trace-item .top-info .author {
  color: #8c8c8c;
}
.trace-item .top-info .author .from {
  display: inline-block;
  padding-right: 10rpx;
}
.trace-item .top-info .author .name {
  display: inline-block;
  font-size: 25rpx;
}
.trace-item .top-info .date {
  display: inline-block;
}
.trace-item .top-info .date text {
  color: #8c8c8c;
  font-size: 26rpx;
}
.trace-item .bottom-info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  margin-top: 20rpx;
  height: 160rpx;
}
.trace-item .bottom-info .cover {
  width: 220rpx;
  -webkit-align-self: center;
          align-self: center;
}
.trace-item .bottom-info .title {
  max-width: 68%;
  padding-left: 10rpx;
}
.trace-item .bottom-info .title text {
  max-height: 150rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  font-size: 34rpx;
  word-break: break-word;
  line-height: 1.5;
}
.trace-item .gap {
  background-color: #999999;
  width: 100%;
  height: 30rpx;
  padding: 0 20rpx 0 20rpx;
  margin: 20rpx 0 0 0;
}

