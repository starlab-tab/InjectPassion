.xz-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 16rpx 30rpx 16rpx 30rpx;
  height: 150rpx;
  width: 100%;
  border-bottom: solid 2rpx #ddd;
  box-sizing: border-box;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.xz-item .top-info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
}
.xz-item .top-info .avatar {
  min-width: 88rpx;
  width: 88rpx;
  height: 88rpx;
  box-sizing: border-box;
  border: #999 2rpx solid;
  border-radius: 8rpx;
  padding: 2rpx;
  display: inline-block;
  text-align: center;
  vertical-align: middle;
  background: #fff;
}
.xz-item .top-info .title {
  font-size: 32rpx;
  color: #555;
  margin: 0;
}
.xz-item .top-info .title text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding-left: 20rpx;
  padding-right: 40rpx;
  word-break: break-all;
  line-height: 46rpx;
}
.xz-item .top-info .action {
  position: absolute;
  right: 8rpx;
  width: 46rpx;
  height: 46rpx;
  z-index: 1;
}
.xz-item .bottom-info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  font-size: 24rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-top: 5rpx;
}
.xz-item .bottom-info .xz-slash {
  margin: 0 10rpx;
}
.xz-item .bottom-info .source {
